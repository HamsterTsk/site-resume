.contact
  width 500px
  & img
    width 77px
    margin-left 27px
  &__head
    width 340px
    font-family 'Conv_Myriad-Pro-Bold'
    font-size 40px
    color #3d6cb0
    margin-top -69px
    margin-left 115px
    overflow hidden
    letter-spacing 1.5px
    &:after
      content ''
      display inline-block
      vertical-align middle
      box-sizing border-box
      width 100%
      height 6px
      background #3d6cb0
      margin-right -100%
      margin-left 6px
      margin-top -8px
  &__content
    margin-top 20px
    & table
      border-spacing 27px 25px
    & td:nth-of-type(1)
      letter-spacing -1px
      font-family 'Conv_Myriad-Pro-Bold'
      font-size 23px
      color #3d6cb0
    & td:nth-of-type(2)
      font-family 'Conv_myriadpro-regular'
      font-size 21px
      padding-left 14px