.education
  width 600px
  height 707px
  margin-top 76px
  & img
    width 77px
    margin-left 12px
  &__head
    letter-spacing 1px
    width 555px
    font-family 'Conv_Myriad-Pro-Bold'
    font-size 41px
    color #3d6cb0
    margin-top -70px
    margin-left 110px
    overflow hidden
    &:after
      content ''
      display inline-block
      vertical-align middle
      box-sizing border-box
      width 100%
      height 6px
      background #3d6cb0
      margin-right -100%
      margin-left 7px
      margin-top -8px
  &__content
    margin-top 24px
    margin-left 13px
    & table
      & tr
        & td:nth-of-type(1)
          vertical-align: top;
    &_head
      font-family 'Conv_Myriad-Pro-Bold'
      font-size 27px
      color #3d6cb0
      display inline-block
      margin-top 12px
      margin-left 7px
      letter-spacing -0.3px
    & time
      font-family 'Conv_myriadpro-regular'
      font-size 28px
      margin-left 15px
      letter-spacing -0.6px
    &_univ
      font-family 'Conv_myriadpro-regular'
      font-size 27px
      display inline-block
      margin-left 6px
      letter-spacing -0.2px
    &_text
      width 600px
      font-family 'Conv_myriadpro-regular'
      font-size 15px
      display inline-block
      margin-top 7px
      margin-left 9px
      letter-spacing 0.4px
    & svg
      height 40px
      width 40px
    & table:nth-of-type(2)
      margin-top -3px
    & table:nth-of-type(3)
      margin-top -6px
    & table:nth-of-type(4)
      margin-top -6px
