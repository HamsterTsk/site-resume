.skills
  width 500px
  & img
    width 77px
    margin-left 26px
    margin-top 21px
  &__head
    width 340px
    font-family 'Conv_Myriad-Pro-Bold'
    font-size 41px
    color #3d6cb0
    margin-top -70px
    margin-left 112px
    overflow hidden
    letter-spacing 1px
    &:after
      content ''
      display inline-block
      vertical-align middle
      box-sizing border-box
      width 100%
      height 6px
      background #3d6cb0
      margin-right -100%
      margin-left 12px
      margin-top -7px
  &__content
    margin-top 40px
    margin-left 70px
    & table
      font-family 'Conv_myriadpro-regular'
      font-size 26px
      text-align center
      border-spacing 0 0
      margin-bottom 15px
      & tr
        margin-top 3px
        display block
      & td
        width 20px
        padding 0 4px
      & caption
        vertical-align bottom
        margin-left 11px
        margin-top -3px
      & svg
        width 20px
        height 20px
    & table:nth-of-type(1)
      & td:nth-of-type(n+10)
        & circle
          fill #e6e6e6
    & table:nth-of-type(2)
      & td:nth-of-type(12)
        & circle
          fill #e6e6e6
    & table:nth-of-type(3)
      & td:nth-of-type(n+7)
        & circle
          fill #e6e6e6
    & table:nth-of-type(4)
      & td:nth-of-type(12)
        & circle
          fill #e6e6e6
