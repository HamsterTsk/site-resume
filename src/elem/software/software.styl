.software
  width 707px
  height 360px
  & img
    width 77px
    margin-left 11px
  &__head
    width 555px
    font-family 'Conv_Myriad-Pro-Bold'
    font-size 42px
    color #3d6cb0
    margin-top -69px
    margin-left 109px
    overflow hidden
    letter-spacing 0.3px
    &:after
      content ''
      display inline-block
      vertical-align middle
      box-sizing border-box
      width 100%
      height 5px
      background #3d6cb0
      margin-right -100%
      margin-left 23px
      margin-top -9px
  &__content
    font-family 'Conv_myriadpro-regular'
    font-size 27px
    letter-spacing -0.1px
    &_firstcoll
      margin-top 35px
      margin-left 17px
      width 357px
      height 600px
      float left
    &_secondcoll
      margin-top 35px
      width 300px
      height 600px
      float left
      & table caption
        margin-left 4px
    & svg
      width 286px
      height 23px
    & table
      margin-bottom 11px
    & table:nth-of-type(2)
      margin-bottom 6px
    & table:nth-of-type(3)
      margin-top 12px
    & table caption
      margin-left 2px
      margin-bottom 8px
    & table:nth-of-type(2) caption
      margin-bottom 6px
    & table:nth-of-type(3) caption
      margin-bottom 2px
    & caption
      text-align left
      text-transform uppercase
  &__firstrect
    width 555px
    height 44px
    fill #e6e6e6
  &__secondrect
    height 44px
    fill #3d6cb0
    &_photoshop
      width 260px
    &_illustrator
      width 201px
    &_indesign
      width 161px
    &_dreamweaver
      width 237px
    &_aftereffects
      width 176px
    &_htmlcss
      width 260px
