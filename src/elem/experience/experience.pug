mixin experience()
    .experience
        img(src=require('./elem/experience/img/Experience.png'))
        .experience__head
            span EXPERIENCE
        .experience__content
            -for(var x = 0; x < 3; x++)
                table
                    tr
                        td
                            svg
                                circle(r='10' cx='50%' cy='30' fill='black')
                        td
                            span.experience__content_head COMPANY NAME
                            time // Feb 2011 - Jun 2014
                            br
                            span.experience__content_job YOUR JOB HERE
                            br
                            span.experience__content_text Lorem ipsum dolor sit amet, consectetur adipisicing elit. Eius, delectus vel est accusantium sapiente. Sed magnam vitae eum voluptas modi. Illo esse, veniam, velit officiis aliquam maiores reiciendis labore non quod! Iure, eius!
