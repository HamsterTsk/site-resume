.experience
  width 600px
  height 584px
  & img
    width 80px
    margin-left 11px
  &__head
    width 555px
    font-family 'Conv_Myriad-Pro-Bold'
    font-size 40px
    color #3d6cb0
    margin-top -69px
    margin-left 109px
    overflow hidden
    letter-spacing 1.4px
    &:after
      content ''
      display inline-block
      vertical-align middle
      box-sizing border-box
      width 100%
      height 6px
      background #3d6cb0
      margin-right -100%
      margin-left 0
      margin-top -8px
  &__content
    margin-top 40px
    margin-left 13px
    & table  tr  td:nth-of-type(1)
      vertical-align top
    &_head
      font-family 'Conv_Myriad-Pro-Bold'
      font-size 27px
      display inline-block
      margin-top 12px
      margin-left 7px
      letter-spacing -0.3px
    & time
      font-family 'Conv_myriadpro-regular'
      font-size 28px
      margin-left 15px
      letter-spacing -0.6px
    &_job
      font-family 'Conv_myriadpro-regular'
      font-size 27px
      display inline-block
      margin-left 6px
      letter-spacing -0.2px
    &_text
      width 600px
      font-family 'Conv_myriadpro-regular'
      font-size 15px
      display inline-block
      margin-top 7px
      margin-left 9px
      letter-spacing 0.4px
    & svg
      height 40px
      width 40px
    & table:nth-of-type(2)
      margin-top -6px
    & table:nth-of-type(3)
      margin-top -3px
