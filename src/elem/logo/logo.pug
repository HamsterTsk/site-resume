mixin logo(Name, surname, position)
    .logo
        svg.logo__svg
            circle(r='105' cx='50%' cy='50%' fill='#3d6cb0')
            circle(r='120' cx='50%' cy='50%' fill='none' stroke='#3d6cb0')
        .logo__text
            span.logo__text_name=Name
            span.logo__text_surname=surname
            span.logo__text_position=position